<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="opusCardRoot" fitToWidth="true" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.OpusCardController">

    <content>
        <VBox alignment="TOP_CENTER" spacing="20"
              style="-fx-padding: 25; -fx-background-color: #f5f5f5;">

            <!-- Title with Icon -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="ðŸ’³" style="-fx-font-size: 30;" />
                <Label text="Recharge OPUS Card" textFill="#333333">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
            </HBox>

            <!-- Card Information Section -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;
                         -fx-border-color: #ddd; -fx-border-radius: 15; -fx-max-width: 480;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <Label text="Enter OPUS Card Details"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #667eea;" />

                <!-- Card ID Input -->
                <VBox spacing="6">
                    <Label text="OPUS Card Number"
                           style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    <TextField fx:id="cardIdField"
                               promptText="Enter 16-digit card number"
                               style="-fx-font-size: 15; -fx-padding: 10;
                                      -fx-background-radius: 8; -fx-border-color: #ddd;
                                      -fx-border-radius: 8;"
                               prefWidth="400.0" />
                </VBox>

                <!-- Card Type Selection -->
                <VBox spacing="8">
                    <Label text="Card Type"
                           style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    <HBox spacing="25" alignment="CENTER_LEFT">
                        <RadioButton fx:id="regularCardRadio" text="Regular" selected="true"
                                     style="-fx-font-size: 13;">
                            <toggleGroup><ToggleGroup fx:id="cardTypeGroup" /></toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="reducedFareCardRadio" text="Reduced Fare"
                                     toggleGroup="$cardTypeGroup" style="-fx-font-size: 13;" />
                    </HBox>
                </VBox>

                <!-- Error Message Label -->
                <Label fx:id="errorLabel" textFill="red" visible="false" wrapText="true"
                       style="-fx-font-size: 12;">
                    <padding><Insets top="8" /></padding>
                </Label>
            </VBox>

            <!-- Recharge Options Section -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;
                         -fx-border-color: #ddd; -fx-border-radius: 15; -fx-max-width: 480;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <Label text="What would you like to add?"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="addTicketBtn" text="Add Ticket" onAction="#handleAddTicket"
                            prefWidth="180" prefHeight="60"
                            style="-fx-background-color: #667eea; -fx-text-fill: white;
                                   -fx-font-size: 15; -fx-background-radius: 10;
                                   -fx-font-weight: bold;">
                        <graphic><Label text="ðŸŽ«" style="-fx-font-size: 24;" /></graphic>
                    </Button>

                    <Button fx:id="addPassBtn" text="Add Pass" onAction="#handleAddPass"
                            prefWidth="180" prefHeight="60"
                            style="-fx-background-color: #667eea; -fx-text-fill: white;
                                   -fx-font-size: 15; -fx-background-radius: 10;
                                   -fx-font-weight: bold;">
                        <graphic><Label text="ðŸ“‹" style="-fx-font-size: 24;" /></graphic>
                    </Button>
                </HBox>

                <Label text="Select an option to continue"
                       style="-fx-font-size: 12; -fx-text-fill: #888; -fx-font-style: italic;" />
            </VBox>

            <!-- Back Button -->
            <Button text="â† Back" onAction="#handleBack" prefWidth="160"
                    style="-fx-background-color: #e0e0e0; -fx-text-fill: #333;
                           -fx-font-size: 13; -fx-padding: 10; -fx-background-radius: 8;" />
        </VBox>
    </content>
</ScrollPane>
